      <!-- body: carousel -->
      <div id="carouselExampleIndicators" class="carousel slide">
        <div class="carousel-inner">
          <!-- first element, active -->
          <div class="carousel-item active">
            <img class="d-block w-100" src="<%= cloudinary_url(@document.photos.first.key) %>" alt="slide 1">
          </div>
          <!-- other elements, inactive at opening -->
          <% if @document.photos.count > 1 %>
            <% @document.photos.each_with_index do |photo, index| %>
              <% if index > 0 %>
                <div class="carousel-item">
                  <img class="d-block w-100" src="<%= cloudinary_url(photo.key) %>" alt="slide <%= index + 1 %> ">
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span><i class="fa fa-angle-left fa-3x arrow-color" aria-hidden="true"></i></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span><i class="fa fa-angle-right fa-3x arrow-color" aria-hidden="true"></i></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <!-- End carousel -->