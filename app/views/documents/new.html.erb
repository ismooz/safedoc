<h1>view: insert new document</h1>

<%= simple_form_for [@document] do |f| %>
  <%= f.association :folder, as: :select,
      input_html: { class: "select2" } %>
  <%= f.association :type, collection: @types, as: :check_boxes,
      input_html: { class: "tag-selector" }, item_wrapper_class: 'tag-item' %>
  <%= f.input :deadline, as: :string, required: true,
      input_html: {class: "datepicker"} %>
  <%= f.input :reminder, as: :string, required: true,
      input_html: {class: "datepicker"} %>
  <%= f.input :photos, as: :file,
      input_html: { multiple: true } %>
  <%= f.button :submit, class: "btn btn-primary mb" %>
<% end %>


