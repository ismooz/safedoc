<!-- display breadcrumb -->
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <!-- root -->
    <li class="breadcrumb-item">
      <a href="<%= folders_path %>"><i class="fas fa-home fa"></i></a>
    </li>
    <!-- other items -->
    <% @breadcrumb.each_with_index do |folder, index| %>
      <li class="breadcrumb-item"><a href="<%= folder_path(folder) %>"><%= folder.name %></a></li>
    <% end %>
    <li class="breadcrumb-item active" aria-current="page"><%= @document.name %></li>
  </ol>
</nav>
<!-- end display breadcrumb -->


<!-- start display card -->
<div class="container">
  <div class="card">
    <h5 class="card-header">Document details</h5>
    <div class="card-body">
      <p class="card-text">Name: <%= @document.name %></p>
      <p class="card-text">Deadline: <%= @document.deadline %></p>
      <!-- preview -->
      <div class="card photo">
        <a href="#" role="button" data-toggle="modal" data-target="#exampleModalCenter">
        <%= cl_image_tag(@document.photos.first.key, :gravity=>"auto", :width=>400, :aspect_ratio=>"16:9", :crop=>"fill", class: "card-img-top") %>
        </a>
        <div class="card-body top-solid">
          <p class="card-text"><%= @document.updated_at.strftime("Last updated: %d %B %Y") %></p>
          <p class="card-text">Pages: <%= @document.photos.size %></p>
          <a href="<%= cloudinary_url(@document.photos.last.key) %>" class="btn btn-primary">Downlaod document</a>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade modal" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
      <!-- Carousel -->
      <div id="carouselExampleIndicators" class="carousel slide">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="<%= cloudinary_url(@document.photos.last.key) %>" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="<%= cloudinary_url(@document.photos.first.key) %>" alt="Second slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span><i class="fa fa-angle-left fa-3x arrow-color" aria-hidden="true"></i></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span><i class="fa fa-angle-right fa-3x arrow-color" aria-hidden="true"></i></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <!-- End carousel -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
